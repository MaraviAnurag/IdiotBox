<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merakiphi.idiotbox">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        <activity
            android:name="com.merakiphi.idiotbox.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.merakiphi.idiotbox.activity.SearchActivity"
            android:theme="@style/MovieDetails"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
            </activity>
        <activity
            android:name="com.merakiphi.idiotbox.activity.AboutUsActivity"
            android:label="@string/activity_title_about_us" />
        <activity
            android:name="com.merakiphi.idiotbox.activity.PrivacyPolicyActivity"
            android:label="@string/activity_title_privacy_policy" />
        <activity android:name="com.merakiphi.idiotbox.activity.MovieDetailsActivity"
        android:theme="@style/MovieDetails"/>
        <activity android:name="com.merakiphi.idiotbox.activity.TvShowDetailsActivity"
            android:theme="@style/MovieDetails"/>
        <activity android:name="com.merakiphi.idiotbox.activity.CastDetailsActivity"
        android:theme="@style/MovieDetails"/>
        <activity android:name="com.merakiphi.idiotbox.activity.EpisodeActivity"
            android:theme="@style/MovieDetails"/>
        <activity android:name="com.merakiphi.idiotbox.activity.SeasonActivity"
            android:theme="@style/MovieDetails"/>
        <activity android:name="com.merakiphi.idiotbox.activity.CastImageActivity"
            android:theme="@style/MovieDetails"/>

    </application>

</manifest>